<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Bettercliniq"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="28sp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp" />

            <TextView
                android:id="@+id/tvCallStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:text="Mobile"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <LinearLayout
                android:id="@+id/layoutOtherButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btnOutput"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_full_rounded"
                        android:backgroundTint="@color/accent"
                        android:scaleType="centerInside"
                        android:tint="@color/white"
                        android:tintMode="src_in"
                        app:srcCompat="@drawable/ic_volume_2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btnMute"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_full_rounded"
                        android:backgroundTint="@color/accent"
                        android:scaleType="centerInside"
                        android:tint="@color/white"
                        android:tintMode="src_in"
                        app:srcCompat="@drawable/ic_mic_off" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/constraintLayout13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:id="@+id/btnHangUp"
            android:layout_width="325dp"
            android:layout_height="56dp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_full_rounded"
            android:backgroundTint="@color/red_holo"
            android:visibility="visible"
            >
            <LinearLayout
                android:id="@+id/layoutHangUp"
                android:layout_width="325dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_full_rounded"
                android:backgroundTint="@color/red_holo"
                android:visibility="visible"
                >
                <ImageView
                    android:id="@+id/btnHangUp"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:textAlignment="center"
                    android:scaleType="centerInside"
                    app:tint="@color/back_white"
                    app:tintMode="src_in"
                    app:srcCompat="@drawable/end"
                    />
                <Space
                    android:layout_width="15dp"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="End Call"
                    android:textAlignment="center"
                    android:textColor="@color/back_white"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
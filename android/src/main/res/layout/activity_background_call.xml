    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        >


        <LinearLayout
            android:id="@+id/linearLayout25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="16dp"
                android:shadowDx="4"
                android:shadowDy="4"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:shadowRadius="4"
                android:text="Unknown"
                android:textAlignment="center"
                android:textColor="@color/naturalBlack"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCallStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="4"
                android:fontFamily="@font/poppins"
                android:text="Mobile"
                android:textAlignment="center"
                android:textColor="@color/naturalGray"
                android:textSize="18sp" />

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="45dp"
                android:shadowColor="@color/blackHalfTransparent"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="4"
                android:textAlignment="center"
                android:textColor="@color/naturalGray"
                android:textSize="18sp"
                android:gravity="center"
                android:visibility="invisible" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/constraintLayout13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/layoutOtherButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnOutput"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_full_rounded"
                    android:backgroundTint="@color/mainColor"
                    android:scaleType="centerInside"
                    android:tint="@color/naturalBack"
                    android:tintMode="src_in"
                    app:srcCompat="@drawable/ic_volume_2"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnMute"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_full_rounded"
                    android:backgroundTint="@color/mainColor"
                    android:scaleType="centerInside"
                    android:tint="@color/naturalBack"
                    android:tintMode="src_in"
                    app:srcCompat="@drawable/ic_mic_off"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
        </LinearLayout>
        <Space
            android:layout_width="1dp"
            android:layout_height="170dp"/>
        <LinearLayout
            android:id="@+id/layoutHangUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp"
            tools:visibility="visible">
            <ImageView
                android:id="@+id/btnHangUp"
                android:layout_width="275dp"
                android:layout_height="56dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:elevation="3dp"
                android:scaleType="centerInside"
                android:tintMode="src_in"
                android:src="@drawable/endbutton" />
